#!/bin/bash

usage () {
    echo "usage: $0 TOPIC"
    exit 1
}

if [ "$#" -lt 1 ] || [ "$#" -ge 2 ]; then
    usage
fi

TOPIC="$1"

CHECK=$(gcloud pubsub topics list 2>&1 | grep -c "$TOPIC")
if [[ "$CHECK" -ne 0 ]]; then
    echo "$TOPIC alredy exists"
    exit 1
fi

# export TOPIC="$TOPIC"
gcloud pubsub topics create ${TOPIC}